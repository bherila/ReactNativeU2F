{
    "compilerOptions": {
        "target": "es2015",
        "jsx": "react",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "module": "es2015",
        "sourceMap": true,
        "allowJs": true
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        ".vscode",
        "node_modules"
    ],
    "compileOnSave": false
}